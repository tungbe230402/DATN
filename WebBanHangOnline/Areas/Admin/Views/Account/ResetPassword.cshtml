@model WebBanHangOnline.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForgotPassword.cshtml";
}

<div class="container" style="margin-top:200px;">
    <hr />
    <main aria-labelledby="title">
        <h2 id="title">@ViewBag.Title</h2>

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Reset your password</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)

            <div class="row" style="margin-bottom:20px">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Nhập tài khoản" })
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập Email" })
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                </div>
            </div>
            <div class="row" style="margin-bottom:20px">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận lại mật khẩu" })
                </div>
            </div>
            <div class="row">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" class="btn btn-outline-dark" value="Reset" />
                </div>
            </div>
        }
    </main>
</div>

