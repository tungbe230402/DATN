@model PagedList.IPagedList<WebBanHangOnline.Models.EF.Order>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    /* Đảm bảo body có đủ khoảng cách so với header */
    body {
        margin: 0;
        padding-top: 70px; /* Điều chỉnh giá trị này để phù hợp với chiều cao của header */
        box-sizing: border-box;
    }

    /* Đảm bảo bảng được căn chỉnh đúng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #fff;
    }

        .table th, .table td {
            text-align: left;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

    .card {
        margin: 100px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header, .card-footer {
        background-color: #f7f7f7;
        padding: 15px;
        border-bottom: 1px solid #ddd;
        border-top: 1px solid #ddd;
    }

    .card-title {
        margin: 0;
        font-size: 1.5em;
        font-weight: bold;
    }

    .card-body {
        padding: 15px;
        overflow-x: auto; /* Đảm bảo bảng không bị tràn trên thiết bị nhỏ */
    }
</style>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách đơn hàng</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Mã đơn hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Phone</th>
                    <th>Địa chỉ</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;<!--(Số trang - 1) * (Số tin trong 1 trang) + 1-->
                    foreach (var item in Model)
                    {
                        <tr id="trow_@item.Id">
                            <td>@(i)</td>
                            <td>@item.Code</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@WebBanHangOnline.Common.Common.FormatNumber(item.TotalAmount, 0)</td>
                            <td>@(item.TypePayment == 1 ? "Chờ thanh toán" : "Đã thanh toán")</td>
                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("ViewDetail", "HistoryOrder", new { id = item.Id })" class="btn btn-sm btn-success">Xem</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>

        <!--Phân trang-->
        <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align: right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
</div>

